@model IEnumerable<TheScheduler.Models.Facility>

<h2>Search For Facilities</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FacilityAddress.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indoor)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var facility in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => facility.FacilityAddress.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => facility.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => facility.Sport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => facility.Indoor)
                </td>
                <td>
                    @Html.ActionLink("View", "View", new { id = facility.ID })
                </td>
            </tr>
        }
    }
</table>