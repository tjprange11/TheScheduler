
@{
    ViewBag.Title = "Weather Forcast";
}

<h2>Weather Forcast</h2>

<p id="reply"></p>
<div class="row">
    <div class="col-md-2">
        <p>Todays Weather</p>
        <p id="temptoday"></p>
    </div>
    <div class="col-md-2">
        <p>Tomorrow</p>
        <p id="temptomorrow"></p>
    </div>
    <div class="col-md-2">
        <p>Day 3</p>
        <p id="tempday3"></p>
    </div>
    <div class="col-md-2">
        <p>Day 4</p>
        <p id="tempday4"></p>
    </div>
    <div class="col-md-2">
        <p>Day 5</p>
        <p id="tempday5"></p>
    </div>
</div>




<script>
