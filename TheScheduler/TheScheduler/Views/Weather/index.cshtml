                //response

                console.log(response);

                $("#reply").text(response.city.name + " 5-Day Weather Forcast");
                $("#temptoday").text(response.list[0].main.temp + " F° " + response.list[0].weather[0].main);
                $("#temptomorrow").text(response.list[8].main.temp + " F° " + response.list[8].weather[0].main);
                $("#tempday3").text(response.list[16].main.temp + " F° " + response.list[16].weather[0].main);
                $("#tempday4").text(response.list[24].main.temp + " F° " + response.list[24].weather[0].main);
                $("#tempday5").text(response.list[32].main.temp + " F° " + response.list[32].weather[0].main);


            });
