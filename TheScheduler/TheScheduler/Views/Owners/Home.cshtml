@model TheScheduler.Models.Owner
@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
    <style>
        .map {
            height: 400px;
            width: 100%;
        }
    </style>
    <script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
</head>
<body>
    <div class="jumbotron">
        <h1>Facility Owner</h1>
        <p class="lead">As a Facility Owner you can create new Facilities to showcase to other users.</p>
        
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Create A Facility</h2>
            <p>
                Here you can create a new Facility that will be showcased to other users.
                The Facility must be verified by an admin before it is showcased.
            </p>
            @Html.ActionLink("Create", "Create" , "FacilityAddresses", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-4">
            <h2>Facilities</h2>
            <p>Here you can find the list of Facilities that are currently being showcased</p>
            @Html.ActionLink("Facilities", "Index", "Facilities", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-4">
            <h2>My Reservations</h2>
            <p>Here you can see pending reservations to your facility. You are able to accept or deny them as you please</p>
            @Html.ActionLink("Reservations", "Index", "Reservations", new { OwnerId = Model.ID }, new { @class = "btn btn-default" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                <div id="map" class="map"></div>
                <script type="text/javascript">
                    var map = new ol.Map({
                        target: 'map',
                        layers: [
                            new ol.layer.Tile({
                                source: new ol.source.OSM()
                            })
                        ],
                        view: new ol.View({
                            center: ol.proj.fromLonLat([-88, 43.032]),
                            zoom: 10
                        })
                    });
                </script>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.ActionLink("ActiveLink", "Index", "Home", new { lat = 2.5, lon = 5.5 }, null)
        </div>
    </div>
</body>

